<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:layout_marginEnd="29dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:fontFamily="serif"
            android:text="Donor Form"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/donorName"
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/donorMobile"
            android:layout_width="315dp"
            android:layout_height="46dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Enter your mobile no."
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donorName" />

        <Spinner
            android:id="@+id/donorBloodGroup"
            android:layout_width="316dp"
            android:layout_height="57dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:entries="@array/BloodGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donorMobile" />

        <EditText
            android:id="@+id/donorLocation"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Enter your location"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donorBloodGroup" />

        <Button
            android:id="@+id/donorSave"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="137dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="16dp"
            android:text="Save Donor"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donorLocation"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout></ScrollView>